{
  "kind": "collectionType",
  "collectionName": "dishes",
  "info": {
    "singularName": "dish",
    "pluralName": "dishes",
    "displayName": "dish"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "photoDish": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "name": {
      "type": "string",
      "required": true
    },
    "prize": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "allergen": {
      "type": "component",
      "component": "food-special.allergen",
      "repeatable": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "first",
        "second",
        "dessert"
      ]
    }
  }
}
